<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="450" spacing="20.0" stylesheets="@informes-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.generaciondeinformes.InformesController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Text id="txInformes" fx:id="txTitulo" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="titulo" text="Aplicación Generación de Informes" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button id="btnInformeClientes" fx:id="btnClientes" mnemonicParsing="false" onAction="#OnClientesClick" styleClass="btn-azul" text="Informe Clientes" />
            <Button id="btnInformeArtistas" fx:id="btnArtista" mnemonicParsing="false" onAction="#OnArtistaClick" styleClass="btn-azul" text="Informe Artistas" />
            <Button id="btnCerrar" fx:id="btnCerrar" mnemonicParsing="false" onAction="#OnCerrarClick" styleClass="btn-rojo" text="Cerrar Aplicación" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>


</VBox>
